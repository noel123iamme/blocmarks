<div class="container">
  <div class="row">
    <div><h1>All Topics</h1>
    <span><%= link_to new_topic_path(@topic), class: 'btn btn-success btn-xs' do %>
      <span class="has-tooltip" data-toggle="tooltip" title="New Topic">
        <span class="glyphicon glyphicon-plus">
        </span>
      </span>
    <% end %>
    </span>
    </div>
    <% @topics.each do |topic| %>
     <h3>
        <%= link_to topic, data: { confirm: 'Are you sure you want to delete this topic?' }, method: :delete, class: 'btn btn-danger btn-xs' do %>
          <span class="has-tooltip" data-toggle="tooltip" title="Delete Topic">
            <span class="glyphicon glyphicon-trash">
            </span>
          </span>
        <% end %>
        <%= link_to edit_topic_path(topic), class: 'btn btn-success btn-xs' do %>
          <span class="has-tooltip" data-toggle="tooltip" title="Edit Topic">
            <span class="glyphicon glyphicon-pencil">
            </span>
          </span>
        <% end %>
        <%= link_to "#{topic.title}", topic %>
      </h3>
    <% end %>
  </div>
</div>
